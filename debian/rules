#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DESTDIR=$(CURDIR)/debian/sit
SITDIR=$(DESTDIR)/usr/share/sit
SITCONFDIR=$(DESTDIR)/etc/sit
CONFDIR=$(DESTDIR)/etc
DOCDIR=$(DESTDIR)/usr/share/doc/sit


clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

# commands to install the files into debian/sit
	install -m 755 -d $(SITDIR)
	install -m 755 -d $(SITCONFDIR)
	install -m 755 -o www-data -g www-data -d $(SITDIR) 
	install -m 644 *.php $(SITDIR)
	for dir in * ; do \
		if [ -d "$$dir" ]; then \
			case "$$dir" in \
			debian) \
			echo "skipping dir $$dir" \
			;; \
			*) \
			cp -ar $$dir $(SITDIR)/$$dir ; \
			find $(SITDIR)/$$dir -type f -exec chmod 644 {} \; ;\
		esac \
		fi \
	done
	install -m 644 debian/apache.conf $(SITCONFDIR)
	install -m 644 debian/sit.conf $(CONFDIR)


build:
# Build architecture-dependent files here.
binary-arch: install
# We have nothing to do by default.

# Build architecture-independent files here.
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_link
	dh_installchangelogs
	dh_compress
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: clean binary-indep install
